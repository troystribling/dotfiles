{
  ".platform-darwin, .platform-linux, .platform-win32": {
    "alt-shift-d": "diagnostics:toggle-table",
    "alt-a": "diagnostics:show-actions-at-position",
    "alt-shift-a": "diagnostics:fix-all-in-current-file",
    "alt-ctrl-<": "diagnostics:go-to-first-diagnostic",
    "alt-ctrl->": "diagnostics:go-to-last-diagnostic",
    "alt-<": "diagnostics:go-to-previous-diagnostic",
    "alt->": "diagnostics:go-to-next-diagnostic"
  },
  ".platform-darwin": {
    "alt-cmd-<": "diagnostics:go-to-previous-diagnostic-trace",
    "alt-cmd->": "diagnostics:go-to-next-diagnostic-trace"
  },
  ".platform-linux, .platform-win32": {
    "alt-ctrl-K": "diagnostics:go-to-previous-diagnostic-trace",
    "alt-ctrl-L": "diagnostics:go-to-next-diagnostic-trace"
  }
}
